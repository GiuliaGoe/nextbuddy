<!-- MultiStep Form -->
<div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= form_for @user, url: profile_personal_path(@user), method: :patch, html: {id: "msform", class: "multistep-form" }  do |f| %>
        <% hidden_field_tag :authenticity_token, form_authenticity_token %>

        <div style="text-align:center;margin-top:5px;">
          <span class="step active"></span>
          <span class="step"></span>
          <span class="step"></span>
        </div>

        <fieldset class="form-step form-step-active">
          <h2 class="fs-title">Meeting preferences</h2>
          <h3 class="fs-subtitle">Tell us how would you like to meet with your buddy</h3>
          <!-- checkboxes do with -->
          <%= f.label :activities %>
          <div class="flex-wrap-center">
            <div class="clickable"> <i class="fas fa-coffee"></i> </div>
            <div class="clickable"> <i class="fas fa-swimmer"></i> </div>
            <div class="clickable"> <i class="fas fa-utensils"></i> </div>
            <div class="clickable"> <i class="fas fa-running"></i> </div>
            <div class="clickable"> <i class="fas fa-dog"></i> </div>
            <div class="clickable"> <i class="fas fa-walking"></i> </div>
            <div class="clickable"> <i class="fas fa-beer"></i> </div>
            <div class="clickable"> <i class="fas fa-bicycle"></i> </div>
            <div class="clickable"> <i class="fas fa-comments"></i> </div>
          </div>
          <%= f.label :availabilities %>
          <%= f.text_field :availabilities %>
          <%= f.label :distance %>
          <%= f.text_field :radius %>
          <%= f.label :address %>
          <%= f.text_field :address %>

          <input type="button" name="next" class="form-step-next" value="Next"/>
        </fieldset>

        <fieldset class="form-step">
          <h2 class="fs-title">Personal information</h2>
          <h3 class="fs-subtitle">Tell us more about you</h3>
          <%= f.label :first_name %>
          <%= f.text_field :first_name, readonly: true %>
          <%= f.label :last_name %>
          <%= f.text_field :last_name, readonly: true %>
          <%= f.label :photo %>
          <%= image_tag(@user.photo, :alt => "@user.first_name", :class => "avatar-bordered") %><br>
          <%= f.label :bio %>
          <%= f.text_field :bio %>

          <input type="button" name="previous" class="form-step-previous" value="Previous"/>
          <input type="button" name="next" class="form-step-next" value="Next"/>
        </fieldset>

        <fieldset class="form-step">
          <h2 class="fs-title">Professional information</h2>
          <h3 class="fs-subtitle">Tell us what you have</h3>



          <%= f.label :job_title %>
          <input type="text" name="cp-job-title">
          <%= f.label :company %>
          <input type="text"s name="cp-company">
          <%= f.label :industry %>
          <input type="text" name="cp-industry">
          <%= f.label :job_functions %>
          <input type="text" name="cp-functions">
          <%= f.label :professional_interests %>
          <input type="text" name="pi-name">
          <%= f.label :professional_goals %>
          <%= f.text_field :professional_goal %>
          <%= f.label :skills %>
          <input type="text" name="skills">

          <input type="button" name="previous" class="form-step-previous" value="Previous"/>
          <%= f.submit 'submit', :class => 'form-step-submit' %>
        </fieldset>
      <% end %>
    </div>
</div>

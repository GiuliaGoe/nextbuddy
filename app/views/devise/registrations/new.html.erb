<div class="wrapper">
  <div class="container-signin">
    <div class="logo">
      <%= image_tag "https://res.cloudinary.com/giugoe/image/upload/v1551855617/NB100.png", height: 100, width: 100 %>
    </div>
    <h3 class="header">Next Buddy</h3>
    <p class="sub-header">Log in into your account to find your buddies</p>
    <div class="row">
      <div class="col-xs-offset-1 col-xs-10 col-sm-offset-4 col-sm-4">
        <div class="card-signin">
          <div class="btns-infos">
            <a class='btn-sign-up-with' href="https://www.linkedin.com/">
              <i class="fab fa-linkedin-in"></i>Sign up with LinkedIn</a>
          </div>
        </div>
      </div>
    </div>
    <div class="footer text-center">
      Already have an account?
      <br><%= link_to "Log in", new_session_path(resource_name), class: "btn-login" %>
    </div>
  </div>
</div>

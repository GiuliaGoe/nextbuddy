
<% sender = User.find(meeting.sender_id) %>
<% receiver = User.find(meeting.recipient_id) %>


<% if current_user.id == meeting.sender_id %>
  <div class="card-meetings">
    <%= link_to user_path(receiver), :action => 'go' do %>
      <div class="meeting-name">
        <%= receiver.first_name.partition(" ").first %> <%= receiver.last_name[0,1] %>.
      </div>
    <% end %>
    <!-- Career Position -->
    <% if receiver.career_positions.any? %>
      <div class="meeting-title"> <%= receiver.current_title.name %> </div>
      <div class="meeting-company"> @<%= receiver.current_company.name %> </div>
    <% end %>

    <%= link_to user_path(receiver), :action => 'go' do %>
      <div>
        <img src="<%= receiver.photo %>" class="avatar-bordered-meeting-preview" />
      </div>
    <% end %>

    <div class="meeting-message">
      <em>You would like to <%= meeting.suggested_activity %> with <%= receiver.first_name.partition(" ").first %> <%= receiver.last_name[0,1] %>. at <%= meeting.meeting_location %> on <%= meeting.meeting_date_time.try(:strftime, "%A, %e %B at%l:%M %p")  %>. You would like to talk about <%= meeting.topic %>.</em>
    </div>
    <div class="meeting-status">
      <div class="pending">
        Pending
      </div>
    </div>
    <!-- Sent or Received -->
    <div class="meeting-responsibility">
      <%= image_tag 'https://res.cloudinary.com/giugoe/image/upload/v1552435485/Icon_out.png', class: "responsibility-icon" %>
    </div>

    <%= link_to "Cancel", cancel_meeting_path(meeting), id: "cancel", type: "button", class: "btn btn-book-meeting", data: { confirm: "That's sad. You might miss a great networking opportunity." } %>


    <div class="mail-user">
      <%= mail_to receiver.email do %>
        <i class='far fa-envelope'></i>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="card-meetings">
    <%= link_to user_path(sender), :action => 'go' do %>
      <div class="meeting-name">
        <%= sender.first_name.partition(" ").first %> <%= sender.last_name[0,1] %>.
      </div>
    <% end %>
    <!-- Career Position -->
    <% if sender.career_positions.any? %>
      <div class="meeting-title"> <%= sender.current_title.name %> </div>
      <div class="meeting-company"> @<%= sender.current_company.name %> </div>
    <% end %>

    <%= link_to user_path(sender), :action => 'go' do %>
      <div>
        <img src="<%= sender.photo %>" class="avatar-bordered-meeting-preview" />
      </div>
    <% end %>
    <div class="meeting-message">
      <em>Hey <%= receiver.first_name.partition(" ").first %>! Would you like to <%= meeting.suggested_activity %> with me at <%= meeting.meeting_location %> on <%= meeting.meeting_date_time.try(:strftime, "%A, %e %B at%l:%M %p")  %>? I would like to talk about <%= meeting.topic %> with you.</em>
    </div>
    <div class="meeting-status">
      <div class="pending">
        Pending
      </div>
    </div>
    <!-- Sent or Received -->
    <div class="meeting-responsibility">
      <%= image_tag 'https://res.cloudinary.com/giugoe/image/upload/v1552435485/Icon_in.png', class: "responsibility-icon" %>
    </div>
    <%= link_to "Accept", accept_meeting_path(meeting), id: "accept", class: "btn btn-book-meeting", data: { confirm: "That's awesome. You are one step closer having a great networking experience." } %>
    <%= link_to "Decline", decline_meeting_path(meeting), id: "decline", class: "btn btn-book-meeting", data: { confirm: "That's sad. You might miss a great networking opportunity." } %>
    <div class="mail-user">
      <%= mail_to sender.email do %>
        <i class='far fa-envelope'></i>
      <% end %>
    </div>
  </div>
<% end %>

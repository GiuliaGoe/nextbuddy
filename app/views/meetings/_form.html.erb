<div class="request-meeting">
  <div class="request-welcome">
    <h4>Send request to <%= @user.first_name.partition(" ").first %> <%= @user.first_name[0,1] %>.</h4>
  </div>
  <div class="request-form">

    <%= simple_form_for ([@user, @meeting]) do |f|%>
      <div class="request-margin request-meeting-time">
        <strong>When would you like to meet?</strong>
        <br>
        <em>Select one day</em>
        <% @relevant_dates.each do |r| %>
          <li>
            <input type="radio" value=<%= r %> name="radrelevant_dates" id="relevant_dates" />
            <%= r.strftime("%a, %d %B '%y") %>
            <br>
        </li>
        <% end %>

        <br>
        <em>Pick a time</em>
        <br>
        <% @relevant_times.each do |t| %>
          <input name="radrelevant_times" value=<%= t %> id="relevant_times" type="radio">
          <%= t %>
          <br>
        <% end %>
      </div>
      <div class="request-margin request-meeting-location"><strong>Where would you like to meet?</strong>
        <br>
        <%= select_tag :meeting_location, "
          <option><em>Select one meeting point</em></option>
          <option>#{ @user.address} (#{ @user.first_name}'s address)</option>
          <option>#{current_user.address} (#{ current_user.first_name}'s address)</option>
          <option>Halfway location between us</option>
          ".html_safe, placeholder: "Select where to meet" %>
      </div>
      <div class="request-margin request-meeting-activity"><strong>What activity would you like to be doing?</strong>
        <br>
          <% @relevant_activities.each do |activity| %>
            <input name="radrelevant_activities" value="<%= activity %>" id="relevant_activities" type="radio">
            <%= activity %>
            <br>
          <% end %>
      </div>
      <div class="request-margin request-meeting-topic"><strong>What do you want to talk about?</strong>
        <br>
        <%= text_field_tag :topic, params[:topic], placeholder: "Define one topic" %>
      </div>
      <div id="preview">

      </div>
      <div class="request-margin request-meeting-button">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>



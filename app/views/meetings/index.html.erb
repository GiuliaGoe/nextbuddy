<div class="my-meetings">
  My received meeting requests are:
  <% @received_meetings.each do |recmeeting| %>
    <div class="my-meetings-">
          <div class="card-user-infos">
            <div>
              <h4>
                <%= User.find(recmeeting.sender_id).first_name %>
                <%= User.find(recmeeting.sender_id).last_name[0,1] %>.
              </h4>
              <p>
                <% User.find(recmeeting.sender_id).career_positions.each do |career| %>
                  <%= career.job_title.first.name %> @<%= career.company.first.name %>
                <% end %>
              </p>
            </div>
          </div>
          <div class="card-user-user">
            <img src='https://kitt.lewagon.com/placeholder/users/giuliagoe' class="card-user-user avatar-bordered"/>
          </div>
          <div class="card-user-meeting-request-activity">
            <em>"Would you like to <%= recmeeting.suggested_activity %> with me?</em>
          </div>
          <div class="card-user-meeting-request-topic">
            <em>I would like to talk about <%= recmeeting.meeting_location %> with you."</em>
          </div>
          <%= link_to "Accept", my_meetings_path, class: "btn btn-book-meeting", data: { confirm: "Get the fuck out of this app. We have not finished the user stories yet." } %>
          <%= link_to "Decline", my_meetings_path, class: "btn btn-book-meeting", data: { confirm: "Get the fuck out of this app. We have not finished the user stories yet." } %>
    </div>

  <% end %>

</div>



<div
  id="map"
  style="width: 100%;
  height: 330px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<div class="scrolling-wrapper">
  <% @users.each do |user| %>
      <div class="card-user">
        <div class="card-user-infos">
          <div>
            <h2>
              <%= user.first_name %>
              <%= user.last_name %>
            </h2>
            <p>@LeWagon</p>
            <br>
            <h3> Senior Developer </h3>
          </div>
        </div>
        <div class="card-user-user">
          <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-user-user avatar-bordered"/>
        </div>
        <div class="card-user-distance">
            <p> ~350m away </p>
        </div>
      </div>
  <% end %>
</div>


